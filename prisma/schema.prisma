generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  user
  admin
}

enum SessionStatus {
  finished
  unfinished
  paused
  inprogress
  active
}

model User {
  id            String         @id @default(cuid())
  name          String
  email         String         @unique
  password      String
  image         String?
  role          Role           @default(user)
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  focusSessions FocusSession[]
  streak        Int            @default(0)
  longestStreak Int            @default(0)
  badges        String[]
}

model FocusSession {
  id          String        @id @default(cuid())
  userId      String
  sessionTime Int
  pausedTime  Int?
  startTime   DateTime?
  endTime     DateTime?
  breakTime   Int
  status      SessionStatus @default(active)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  user        User          @relation(fields: [userId], references: [id])
}

enum Priority {
  low
  medium
  high
}

model Task {
  id        String   @id @default(uuid())
  text      String
  completed Boolean  @default(false)
  priority  Priority
  dueDate   DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
