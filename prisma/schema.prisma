generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  user
  admin
}

enum SessionStatus {
  finished
  unfinished
  paused
  inprogress
}

model User {
  id            String         @id @default(cuid())
  name          String
  email         String         @unique
  password      String
  image         String?
  role          Role           @default(user)
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  focusSessions FocusSession[]
}

model FocusSession {
  id        String       @id @default(cuid())
  userId    String
  startTime DateTime      @default(now()) 
  endTime   DateTime?                     
  breakTime Int                            
  status    SessionStatus @default(inprogress)
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt
  user      User           @relation(fields: [userId], references: [id])
}
